@{
    ViewData["Title"] = "Verify Your Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2>Check your email</h2>
            <p>We have sent a verification email to the address you provided. Please check your inbox and follow the instructions.</p>
            <p>If you didn't receive the email, you can <a href="@Url.Action("ForgotPassword", "Users")">request a new one</a>.</p>
        </div>
    </div>
</div>
