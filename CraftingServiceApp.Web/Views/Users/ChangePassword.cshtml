@using CraftingServiceApp.Web.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
}
<div class="account-container" style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f8f9fa;">
    <div class="account-box" style="width: 100%; max-width: 600px; background-color: #fff; padding: 3rem; border-radius: 12px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
        <h2 class="text-center mb-4" style="font-size: 1.75rem;">Change Password</h2>

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label" style="font-size: 1rem; font-weight: 500;"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="form-label" style="font-size: 1rem; font-weight: 500;"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label" style="font-size: 1rem; font-weight: 500;"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="Submit" class="btn btn-primary w-50" style="display: block; margin: 0 auto; padding: 0.6rem 1.2rem; font-size: 1.05rem;" />

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Message"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@TempData["Message"]',
                confirmButtonColor: '#28a745'
            });
        </script>
    }

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
