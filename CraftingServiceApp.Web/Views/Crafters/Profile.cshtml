@model CraftingServiceApp.Web.ViewModels.CraftersViewModel

<div class="container mt-5">
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <div class="text-center">
                <img src="@Model.ProfilePic" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture">
                <h2 class="mt-3">@Model.FullName</h2>
                <p class="text-muted"><i class="fas fa-phone-alt me-1"></i> @Model.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>
