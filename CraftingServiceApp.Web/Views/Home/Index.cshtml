<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>
    // تفعيل مكتبة WOW.js
    document.addEventListener('DOMContentLoaded', function() {
        new WOW().init();

        // دالة لتكبير الصورة بشكل تدريجي
        function growImage(imageId, delay) {
            setTimeout(function() {
                var img = document.getElementById(imageId);

                // تغيير حجم الصورة تدريجياً
                img.style.transform = "scale(1)";
                img.style.opacity = "1";
            }, delay);
        }

        // تطبيق تأثير التكبير على الصور بعد فترة
        setTimeout(function() {
            growImage('img1', 700);  // الصورة الأولى بعد 700 مللي ثانية
            growImage('img2', 1200); // الصورة الثانية بعد 1200 مللي ثانية
        }, 300);
    });
</script>
