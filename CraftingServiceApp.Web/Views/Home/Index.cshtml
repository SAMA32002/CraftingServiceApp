@{
    ViewData["Title"] = "Home Page";
}

<!-- Billboard Section -->
<section id="billboard" class="mb-5">
    <div class="row align-items-center g-0 bg-secondary">
        <div class="col-lg-6">
            <div class="m-4 p-4 m-lg-5 p-lg-5">
                <h6 class="text-white">
                    <span class="text-primary">#</span>1 Best HVAC Services
                </h6>
                <h2 class="display-4 fw-bold text-white my-4">
                    Air duct cleaning, AC cleaning & Home Maintenance
                </h2>
                <ul class="info d-flex flex-wrap align-items-center list-unstyled">
                    <li class="fw-medium text-white d-flex align-items-center me-4">
                        <svg class="text-primary me-1" width="20" height="20">
                            <use xlink:href="#check-circle"></use>
                        </svg> Servicing
                    </li>
                    <li class="fw-medium text-white d-flex align-items-center me-4">
                        <svg class="text-primary me-1" width="20" height="20">
                            <use xlink:href="#check-circle"></use>
                        </svg> Repairs
                    </li>
                    <li class="fw-medium text-white d-flex align-items-center me-4">
                        <svg class="text-primary me-1" width="20" height="20">
                            <use xlink:href="#check-circle"></use>
                        </svg> Installation
                    </li>
                </ul>
                <a href="#" class="btn btn-light btn-bg btn-slide hover-slide-right mt-4">
                    <span>Book Appointment</span>
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="~/ui/images/billboard.jpg" alt="Billboard Image" class="img-fluid">
        </div>
    </div>
</section>
<section id="recent-services">
    <div class="container">
        <h2 class="mb-4 text-center">Recent Services</h2>
        <div class="row justify-content-center">
            @foreach (var service in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4 d-flex align-items-stretch">
                    <div class="card-item w-100">
                        <div class="card border-0 bg-transparent shadow-sm">
                            <div class="card-image position-relative" style="width: 100%; height: 250px; overflow: hidden;">
                                <a href="@Url.Action("Details", "Services", new { id = service.Id })" aria-label="View details of @service.Title">
                                    <img src="@(!string.IsNullOrEmpty(service.Image) ? service.Image : "/images/default-service.png")"
                                         alt="Image for @service.Title"
                                         class="img-fluid w-100 h-100"
                                         style="object-fit: cover; border-radius: 10px;">
                                </a>
                            </div>
                            <div class="card-body p-0 mt-3">
                                <h5 class="mt-2 text-truncate" title="@service.Title">
                                    <a href="@Url.Action("Details", "Services", new { id = service.Id })">@service.Title</a>
                                </h5>
                                <p class="mb-1 text-muted">
                                    By <strong>@(service.Crafter?.FullName ?? "Unknown")</strong>
                                </p>

                                <p class="small">
                                    @{
                                        var descPreview = service.Description?.Length > 100
                                        ? service.Description.Substring(0, 100) + "..."
                                        : service.Description;
                                    }
                                    @descPreview
                                    @if (service.Description?.Length > 100)
                                    {
                                        <a href="@Url.Action("Details", "Services", new { id = service.Id })" class="text-decoration-underline fst-italic">
                                            Read more
                                        </a>
                                    }
                                </p>

                                <span class="fw-bold text-primary">@service.Price.ToString("F2") EGP</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Services")" class="btn btn-outline-primary btn-lg rounded-pill">
            <i class="bi bi-arrow-right-circle"></i> Show All Services
        </a>
    </div>

</section>
