@model IEnumerable<CraftingServiceApp.Web.ViewModels.CraftersViewModel>


<section id="crafters-list">
    <div class="container mt-4">
        <h2 class="text-start mb-4">Our Crafters</h2>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var crafter in Model)
                {
                    <div class="col-md-6 col-lg-4 d-flex">
                        <div class="card mb-4 crafter-card w-100 shadow-sm">
                            <div class="row g-0">
                                <div class="col-12 text-center p-3">
                                    <img src="@crafter.ProfilePic" class="img-fluid rounded-circle" alt="Profile Picture" style="width: 120px; height: 120px; object-fit: cover;">
                                </div>
                                <div class="col-12">
                                    <div class="card-body text-center">
                                        <h5 class="card-title mb-2">@crafter.FullName</h5>
                                        <p class="card-text text-muted mb-3">
                                            <i class="fas fa-phone me-1"></i> @crafter.PhoneNumber
                                        </p>
                                        <div class="d-flex justify-content-between">
                                            <button class="btn btn-primary w-100">Contact Info</button>
                                            <button class="btn btn-primary btn-sm">Send Request</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info">
                        No crafters found.
                    </div>
                </div>
            }
        </div>
    </div>
</section>
