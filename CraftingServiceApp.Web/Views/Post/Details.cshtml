@model CraftingServiceApp.Web.ViewModels.PostDetailsViewModel

<h2>@Model.Post.Title</h2>
<p><strong>Description:</strong> @Model.Post.Description</p>
<p><strong>Category:</strong> @Model.Post.Category.Name</p>
<p><strong>Status:</strong> @Model.Post.Status</p>
<p><strong>Client ID:</strong> @Model.ClientId</p>

<h3>Comments</h3>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>
            <strong>@comment.CrafterName</strong>: @comment.Message
        </li>
    }
</ul>

@if (User.IsInRole("Crafter"))
{
    <h3>Add a Comment</h3>
    <form asp-controller="Comment" asp-action="Add" method="post">
        <input type="hidden" name="postId" value="@Model.Post.Id" />

        <div class="form-group">
            <label for="Message">Comment:</label>
            <textarea class="form-control" name="message" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

@if (User.IsInRole("Client"))
{
    <!-- TContact Crafter Button -->
    <button class="btn btn-info mt-3" data-toggle="modal" data-target="#contactModal">Contact Crafter</button>

    <!-- Contact Modal -->
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Contact Crafter</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Message" asp-action="SendMessage" method="post">
                        <input type="hidden" name="CrafterId" value="@Model.Post.ClientId" />
                        <input type="hidden" name="PostId" value="@Model.Post.Id" />

                        <div class="form-group">
                            <label for="Message">Your Message:</label>
                            <textarea class="form-control" name="Message" rows="4" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
}

<!-- Add CSS to change button color to Light Blue -->
<style>
    .btn-info {
        background-color: #007bff; /* Standard blue color */
        border-color: #007bff;
        color: white; /* Text color */
    }

        .btn-info:hover {
            background-color: #0056b3; /* Darker blue color when hovering */
            border-color: #0056b3;
        }

        .btn-info:focus {
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.5); /* Focus effect */
        }
</style>
